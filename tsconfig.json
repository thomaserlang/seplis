{
    "compilerOptions": { 
        "target": "ESNext",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "module": "ESNext",
        "jsx": "react-jsx",
        "allowJs": true,
        "strictFunctionTypes": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "outDir": "./dist/",
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "@seplis/*": ["seplis/web/ui/*"],
        }
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "seplis/web/static/ui"
    ]
}